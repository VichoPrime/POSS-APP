# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf
*.pyw text eol=lf
*.pyx text eol=lf

# JavaScript/TypeScript files
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf

# Batch files should use CRLF on Windows
*.bat text eol=crlf
*.cmd text eol=crlf

# Shell scripts should use LF
*.sh text eol=lf

# Image files
*.jpg binary
*.jpeg binary
*.png binary
*.gif binary
*.webp binary
*.ico binary
*.svg text

# Document files
*.md text eol=lf
*.txt text eol=lf
*.csv text eol=lf

# Config files
.gitignore text eol=lf
.gitattributes text eol=lf
.env* text eol=lf
